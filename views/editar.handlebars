<div class="container text-center">

  <div class="row">
    <div class="col-1">
      &nbsp;
    </div>
    <div class="col bg-white">
      <h1 class="text-start">Cadastro de Cliente</h1>
      <p>
        <form action="/atualizar" method="POST">
          {{#each cliente}}
            {{#dataValues}}
              <input
                type="hidden"
                name="id"
                class="form-control"
                id="id"
                value="{{id}}"
              />
              <div class="mb-3 text-start">
                <label class="form-label">Nome:</label>
                <input
                  type="name"
                  name="nome"
                  class="form-control"
                  id="nome"
                  placeholder="Digite seu nome"
                  value="{{nome}}"
                />
              </div>
              <div class="mb-3 text-start">
                <label class="form-label">Endereço:</label>
                <input
                  type="name"
                  name="endereco"
                  class="form-control"
                  id="endereco"
                  placeholder="Digite o endereço"
                  value="{{endereco}}"
                />
              </div>
              <div class="mb-3 text-start">
                <label class="form-label">Bairro:</label>
                <input
                  type="name"
                  name="bairro"
                  class="form-control"
                  id="bairro"
                  placeholder="Digite o bairro"
                  value="{{bairro}}"
                />
              </div>
              <div class="mb-3 text-start">
                <label class="form-label">CEP:</label>
                <input
                  type="name"
                  name="cep"
                  class="form-control"
                  id="cep"
                  placeholder="Digite o CEP"
                  value="{{cep}}"
                />
              </div>
              <div class="mb-3 text-start">
                <label class="form-label">Cidade:</label>
                <input
                  type="name"
                  name="cidade"
                  class="form-control"
                  id="cidade"
                  placeholder="Digite a cidade"
                  value="{{cidade}}"
                />
              </div>
              <div class="mb-3 text-start">
                <label class="form-label">Estado:</label>
                <input
                  type="name"
                  name="estado"
                  class="form-control"
                  id="estado"
                  placeholder="Digite o estado"
                  value="{{estado}}"
                />
              </div>

              <div class="mb-3 text-start">
                <button type="submit" class="btn btn-primary">Atualizar</button>
              </div>
            {{/dataValues}}
          {{/each}}
        </form>
      </p>
    </div>
    <div class="col-1">
      &nbsp;
    </div>
  </div>
</div>